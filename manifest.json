{
    "manifest_version": 3,
    "name": "Delete Spam Emails",
    "description": "An extension to delete all spam emails in a Gmail inbox",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "https://mail.google.com/*"
    ],
   
    "browser_action": {
      
      "default_popup": "popup.html"
    }
  }
  
